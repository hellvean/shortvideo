<script>
import u from '../assets/js/login.js'
import method from '../assets/js/common.js'
var sha256 = require("sha256");
export default {
  name: 'login',
  data () {
    return {
     name:'',
     password:'',
    }
  },
  mounted:function(){
    u();
    var _this=this;
    document.onkeyup = function (e) {
        if (window.event)
            e = window.event;
        var code = e.charCode || e.keyCode;
        if (code == 13) {
           _this.submit();
        }
    }
  },
  methods:{
    submit:function(){
        if(this.name==''){
          this.$Message.error('请输入用户名!');
        }else  if(this.password==''){
          this.$Message.error('请输入密码!');
        }else{
            this.sub();
        }
    },
    sub(){
    var name=this.name;
    var password=sha256(this.password);
    var _this=this;
     this.$http({
         method:'post',
         url:_this.url+'/login',
         data:'username='+name+'&password='+password,
         success:function(response){
               if(response.data.code==20000){
                _this.$store.state.token=response.data.token;
                sessionStorage.setItem('HT_token',response.data.token)
                _this.$router.push({path:'/home'});
                }else{
                    _this.$Message.warning(response.data.message);
                }
         },
         error:function(err){
             console.log(err);
         },
     })
    },
 },
  computed:{

	},
}
</script>


